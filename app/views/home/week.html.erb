<div>

  <h4 class="m-3"><%= @place.prefecture %></h4>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">日付</th>
        <th scope="col">日中の気温</th>
        <th scope="col">気温差</th>
        <th scope="col">天気</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @hash.each do |weather| %>
        <tr>
          <th scope="row"><%= weather["date"].month %>/<%= weather["date"].day %></th>
          <td><%= weather["f_temp"] %></td>
          <td><%= weather["temp_defference"] %></td>
          <td><%= image_tag "/images/#{weather["icon"]}" %></td>
          <td>
            <button>おすすめコーデを見る</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

