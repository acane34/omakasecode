<div>

  <div class="d-flex flex-row">
    <h4 class="m-3">今日の天気　　<%= @place.prefecture %></h4>
  </div>

  <div class="row m-3">
    <div class="col">
      <div class="m-2">
        <h6>日中の気温　<%= @today_temp %>度</h7>        
      </div>
      <div class="m-2">
        <h6>気温差 <%= @today_tdefference %>度</h6>
      </div>
    </div>
    <div class="col m-2">
      <div class="">
        <%= image_tag "/images/#{@today_icon}" %>
      </div>
    </div>
  </div>
  <div class="m-3">
    <%= button_to "明日以降はこちら", {:controller=>"home", :action=>"week"}, {method: :get, class:"btn btn-secondary"} %>
  </div>
  <hr>
  <div>
    <h4 class="m-3">おすすめコーデ</h4>
  </div>
</div>

