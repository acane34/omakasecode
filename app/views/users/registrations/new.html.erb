<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="container">
    <div class="card-container">
      <div class="card-body">
          <h3 class="card-title text-center mb-4 mt-1">新規登録</h3>
          <hr>
          <form>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                      <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                    </svg>
                  </span>
                </div>
                <%= 
                f.text_field :username, 
                class: "form-control", 
                placeholder: "ユーザーネーム", 
                type: "name"
                 %>

                 <% if resource.errors.messages[:username].present? %>
                  <span class="">
                    <strong><%= resource.errors.full_messages_for(:username).first %></strong>
                  </span>
                <% end %>
              </div> 
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                      <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
                    </svg>                  
                  </span>
                </div>
                <%=
                  f.email_field :email,
                  class: "form-control #{"is-invalid" if resource.errors.messages[:email].present? }",
                  autofocus: "true",
                  required: "",
                  autocomplete: "email",
                  placeholder: "メールアドレス"
                %>

                <% if resource.errors.messages[:email].present? %>
                  <span class="">
                    <strong><%= resource.errors.full_messages_for(:email).first %></strong>
                  </span>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> 
                    <i class="fa-solid fa-earth-asia"></i>
                  </span>
                </div>
                <%= f.label :place_id, "", class: "col-md-5 col-form-label text-md-left" do %>

                  <div class="prefecture-select">
                    <%= f.collection_select(:place_id, @places, :id, :prefecture, {prompt: true}) %>
                  </div>
                <% end %>

                 <% if resource.errors.messages[:place_id].present? %>
                  <span class="">
                    <strong><%= resource.errors.full_messages_for(:place_id).first %></strong>
                  </span>
                <% end %>
              </div> 
            </div>


            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                      <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                    </svg> 
                  </span>
                </div>   
                <%=
                  f.password_field :password,
                  class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? }",
                  autofocus: "true",
                  placeholder: "パスワード"
                %>
                <% if resource.errors.messages[:password].present? %>
                <span class="">
                  <strong><%= resource.errors.full_messages_for(:password).first %></strong>
                </span>
                <% end %>          
              </div> 
            </div> 

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                      <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                    </svg> 
                  </span>
                </div>   
                <%=
                  f.password_field :password_confirmation,
                  class: "form-control samazon-login-input",
                  autocomplete: "new-password",
                  placeholder: "パスワード（確認用）"
                %>        
              </div> 
            </div>

            <div class="form-group">
              <%= f.submit "登録する", class: "btn btn-outline-secondary btn-block" %>
            </div> 
          </form>
      </div>
    </div>
  </div>
<% end %>